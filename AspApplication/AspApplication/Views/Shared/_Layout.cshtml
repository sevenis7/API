<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <a asp-action="Index" asp-controller="Values">Главная</a>
    @Context.Session.GetString("UserName")
    @Context.Session.GetString("Role")
    @if (!String.IsNullOrWhiteSpace(Context.Session.GetString("JWToken"))){
        @if (Context.Session.GetString("Role") == "Admin")
        {
            <a asp-action="Index" asp-controller="User">Пользователи</a>
        }
        <a asp-action="Logout" asp-controller="Account">Выйти</a>
    }
    else
    {
        <a asp-action="Login" asp-controller="Account">Войти</a>
        <a asp-action="Register" asp-controller="Account">Регистрация</a>
    }
    <div>
        @RenderBody()
    </div>
</body>
</html>
